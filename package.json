{
  "name": "bencastillo-portfolio",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true npm run build",
    "build:profile": "NODE_OPTIONS='--inspect' next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "export": "next build && next export",
    "deploy": "npm run build && touch out/.nojekyll && echo 'bencastillo.dev' > out/CNAME",
    "optimize:images": "node scripts/optimize-images.js",
    "generate:icons": "node scripts/generate-icons.js",
    "lighthouse": "lhci autorun",
    "lighthouse:local": "npm run build && npm run start & lhci autorun --collect.startServerCommand='npm run start' --collect.url='http://localhost:3000'",
    "perf:analyze": "npm run build:analyze && open .next/analyze/client.html",
    "perf:bundle": "npm run build && npx bundle-buddy .next/static/**/*.js",
    "perf:size": "npm run build && npx size-limit",
    "perf:hero": "node scripts/analyze-hero-bundle.js",
    "perf:hero:watch": "nodemon --watch components/HeroOverlay.tsx --exec 'npm run perf:hero'",
    "bundle:analyze": "ANALYZE=true npm run build && npm run bundle:report",
    "bundle:report": "node scripts/analyze-hero-bundle.js",
    "bundle:size-limit": "npm run build && npx size-limit --json > bundle-size-report.json",
    "bundle:compare": "npm run bundle:size-limit && node scripts/compare-bundles.js",
    "test:pwa": "npm run build && npx pwa-asset-generator ./public/icons/icon-source.png ./public/icons --background '#1a1a1a' --manifest ./public/manifest.json",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:components": "playwright test tests/components/",
    "test:components:headed": "playwright test tests/components/ --headed",
    "test:components:ui": "playwright test tests/components/ --ui",
    "test:visual": "playwright test tests/visual/",
    "test:visual:update": "playwright test tests/visual/ --update-snapshots",
    "test:visual:headed": "playwright test tests/visual/ --headed",
    "test:visual:ui": "playwright test tests/visual/ --ui",
    "test:visual:hero": "playwright test tests/visual/hero-overlay-visual.spec.ts",
    "test:visual:hero:update": "playwright test tests/visual/hero-overlay-visual.spec.ts --update-snapshots",
    "test:a11y": "node tests/a11y-test.js",
    "test:a11y:server": "npm run build && npx http-server out -p 3000 & sleep 3 && npm run test:a11y",
    "test:a11y:e2e": "playwright test tests/e2e/accessibility.spec.ts",
    "test:a11y:e2e:headed": "playwright test tests/e2e/accessibility.spec.ts --headed",
    "test:accessibility": "npm run build && npx http-server out -p 3000 & npx axe http://localhost:3000 --tags wcag2a,wcag2aa",
    "test:all": "npm run lint && npm run type-check && npm run test:e2e && npm run test:a11y:e2e && npm run lighthouse:local",
    "preflight": "npm run lint && npm run type-check && npm run build && npm run test:a11y:e2e && npm run lighthouse:local"
  },
  "dependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.7",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.6",
    "framer-motion": "^11.3.8",
    "fuse.js": "^7.1.0",
    "gray-matter": "^4.0.3",
    "jsdom": "^26.1.0",
    "lucide-react": "^0.539.0",
    "next": "14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reading-time": "^1.5.0",
    "rehype": "^13.0.2",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "remark-parse": "^11.0.0",
    "resend": "^6.0.1",
    "unified": "^11.0.5",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@axe-core/playwright": "^4.10.2",
    "@axe-core/puppeteer": "^4.10.2",
    "@playwright/test": "^1.48.2",
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "http-server": "^14.1.1",
    "postcss": "^8.4.40",
    "puppeteer": "^23.11.0",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.5.4",
    "wait-on": "^8.0.1"
  }
}
